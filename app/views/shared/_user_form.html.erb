<form action="<%= action_url %>" method="post">
  <%= auth_token %>

  <label for="user_username">Username: </label>
  <br>
  <input
    type="text"
    name="user[username]"
    value="<%= user.username %>">

  <br>
  <label for="user_password">Password: </label>
  <br>
  <input
    type="password"
    name="user[password]"
    value="<%= user.password %>">

  <br>
  <br>
  <input type="submit">
</form>
